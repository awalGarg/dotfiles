#!/bin/sh

if [ -e "$1" ]; then
    f="$1"
    case "$f" in
        *png)
            exec xclip -sel c -t image/png "$f"
            ;;
        *jpg)
            exec xclip -sel c -t image/jpg "$f"
            ;;
        *)
            if file "$f" | grep -q text
            then
                exec xclip -sel c "$f"
            else
                echo 'File not image or text' 1>&2
                exit 1
            fi
    esac
fi

exec xclip -i -sel c

